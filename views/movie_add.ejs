<!DOCTYPE html>
<html>
  <head>
    <title>首页</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/ionicons.min.css">
    <link rel="stylesheet" href="/lib/admin-lte/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="/lib/admin-lte/dist/css/skins/skin-blue.min.css">
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">

    <!-- Main Header -->
      <% include header.ejs %>

    <!-- Left side column. contains the logo and sidebar -->
      <% include menu.ejs %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->

      <!-- Main content -->
      <section class="content">

        <!-- Your Page Content Here -->
        <div class="box box-info">
          <div class="box-header with-border">
            <h3 class="box-title">添加电影</h3>
          </div>
          <!-- /.box-header -->
          <!-- form start -->
          <form class="form-horizontal" action="/movielist/addMovieAction" method="post">
            <div class="box-body">
              <div class="form-group">
                <label for="id" class="col-sm-2 control-label">电影标识id</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" readonly value="mo_<%=  len<9 ? "0"+(len*1+1):len*1+1 %>" required id="id" name="id" placeholder="电影标识id">
                </div>
              </div>
              <div class="form-group">
                <label for="title" class="col-sm-2 control-label">电影名称</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" required id="title" name="title" placeholder="电影名称">
                </div>
              </div>
              <div class="form-group">
                <label for="year" class="col-sm-2 control-label">上映时间</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" required id="year" name="year" placeholder="上映时间">
                </div>
              </div>
              <div class="form-group">
                <label for="rating" class="col-sm-2 control-label">评分</label>
                <div class="col-sm-10">
                  <input type="number" class="form-control" value="4.8" min="0" max="5" step="0.1" required id="rating" name="rating" placeholder="评分">
                </div>
              </div>
              <div class="form-group">
                <label for="images" class="col-sm-2 control-label">宣传图片</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" required id="images" name="images" placeholder="宣传图片">
                </div>
              </div>
              <div class="form-group">
                <label for="directors" class="col-sm-2 control-label">导演</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" required id="directors" name="directors" placeholder="导演">
                </div>
              </div>
              <div class="form-group">
                <label for="casts" class="col-sm-2 control-label">演员</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" required id="casts" name="casts" placeholder="演员">
                </div>
              </div>
              <div class="form-group">
                <label for="collect_count" class="col-sm-2 control-label">票房</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" required id="collect_count" name="collect_count" placeholder="票房">
                </div>
              </div>
              <div class="form-group">
                <label for="introduction" class="col-sm-2 control-label">简介</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" required id="introduction" name="introduction" placeholder="简介">
                </div>
              </div>

            </div>
            <!-- /.box-body -->
            <div class="box-footer">
              <div class="form-group">
                <label for="introduction" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                  <button type="submit" class="btn btn-info">添加</button>
                </div>
              </div>

            </div>
            <!-- /.box-footer -->
          </form>
        </div>
     </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Main Footer -->
      <% include footer.ejs %>
  </div>
  </body>
  <script src="/javascripts/jquery.min.js" type="text/javascript"></script>
  <script src="/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
  <script src="/javascripts/app.min.js" type="text/javascript"></script>
  <script>
    function deleteMovie(id){
        console.log(id)
        window.location.href="/movielist/deleteMovie?id="+id;
    }

    function addMovie(){
        window.location.href="/movielist/addMovie";
    }
  </script>
</html>
